div.page-receita
  nav.navbar.navbar-default(role="navigation")
    div.container
      //- Brand and toggle get grouped for better mobile display
      div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
          span.sr-only Alternar menu
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href="#") 
          |Panelando
          div.navbar-brand-icon
            i.icon.icon-food-1

      //- Collect the nav links, forms, and other content for toggling
      div.collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") Login
          li
            a(href="#") Cadastrar
   

  div.container
    div.row
      div.col-md-4
        //-- Main menu
        nav.main-menu(role="navigation")
          ul.nav.nav-pills.nav-stacked
            li
              a(href="#/")
                |Home
                div.link-icon
                  i.icon.icon-shop

            li
              a(href="#/receitas/2")
                |Receitas
                div.link-icon
                  i.icon.icon-food-1

            li.active
              a(href="#/nova")
                |Nova Receita
                div.link-icon
                  i.icon.icon-doc-1


      div.col-md-8

        article.l-receita-content

          h3 Nome da Receita

          div.notepad-block
          
            div.notepad-item-holder
              input.notepad-item

          div.l-receita-image(style="margin-top: 30px")


            div.fileinput.fileinput-new(data-provides="fileinput")
              div.fileinput-preview.thumbnail(data-trigger="fileinput", style="width: 200px; height: 150px;")
              div
                span.btn.btn-default.btn-file
                  span.fileinput-new Select image
                  span.fileinput-exists Change 
                  input(type="hidden", name="MAX_FILE_SIZE", value="30000000")
                  input(type="file", name="file")

                a.btn.btn-default.fileinput-exists(href="#", data-dismiss="fileinput") Remove

              hr
              

              input(type="text" ng-model="myModelObj")
              input(type="file" ng-file-select="onFileSelect($files)")
              button(class="btn btn-lg btn-danger" ng-click="superUpload()") Super Upload


              

          div.l-receita-info.row
            ul
              li.col-md-4
                h5
                  i.icon.icon-clock-1 
                  div.l-receita-info-caption
                    div.l-receita-info-input
                      input.form-control
                    | &nbsp;min
              li.col-md-4
                h5
                  i.icon.icon-user-1 
                  div.l-receita-info-caption
                    div.l-receita-info-input
                      input.form-control
                    | &nbsp;porções
              li.col-md-4
                h5
                  i.icon.icon-beaker-1 
                  div.l-receita-info-caption
                    div.l-receita-info-input
                      select.form-control
                        option Fácil
                        option Médio
                        option Difícil

          h3.l-receita-section-titl Ingredientes

          div.notepad-block
            div.notepad-block-heading
          
            div.notepad-item-holder(
              data-ng-repeat="ingredient in ingredients"
            )
              span.notepad-number 
                |{{ $index + 1 }}
                
              div.notepad-item(
                data-ng-if="!ingredient.editing"
                data-ng-click="editIngredient($index)"
              )
                |{{ ingredient.description }}

              input.notepad-item.editing(
                type="text",
                data-ng-if="ingredient.editing"
                data-ng-value="ingredient.description"
                data-ng-model="ingredients[$index].description"
                data-ng-keydown="saveIngredient($event, $index, true)"
                focus="ingredient.editing"
              )  

            input.notepad-item(
              placeholder="Digite o ingrediente e aperte enter"
              data-ng-model="newIngredient.description"
              data-ng-keydown="addIngredient($event)"
            )

          h3.l-receita-section-titl Modo de Preparo

          div.notepad-block
            div.notepad-block-heading
          
            div.notepad-item-holder(
              data-ng-repeat="step in steps"
            )
              span.notepad-number 
                |{{ $index + 1 }}
                
              div.notepad-item(
                data-ng-if="!step.editing"
                data-ng-click="editStep($index)"
              )
                |{{ step.description }}

              input.notepad-item.editing(
                type="text",
                data-ng-if="step.editing"
                data-ng-value="step.description"
                data-ng-model="steps[$index].description"
                data-ng-keydown="saveStep($event, $index, true)"
                focus="step.editing"
              )  

            input.notepad-item(
              placeholder="Digite a instrução e aperte enter"
              data-ng-model="newStep.description"
              data-ng-keydown="addStep($event)"
            )

