doctype html
html(lang="en" ng-app="panelando")
head
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge")
  meta(name="viewport", content="width=device-width, initial-scale=1")
  title Panelando - Nova Receita

  //- Bootstrap
  link(href="assets/stylesheets/style.css", rel="stylesheet")

  //- Favicon
  link(rel="shortcut icon", href="favicon.ico")

  //- Google fonts
  link(href="http://fonts.googleapis.com/css?family=Bitter:400,700", rel="stylesheet")
  link(href="http://fonts.googleapis.com/css?family=Open+Sans:700,300,600,800,400", rel="stylesheet")
  link(href="http://fonts.googleapis.com/css?family=Pacifico", rel="stylesheet")

body.page-nova-receita
  nav.navbar.navbar-default(role="navigation")
    div.container
      //- Brand and toggle get grouped for better mobile display
      div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
          span.sr-only Alternar menu
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href="#") 
          |Panelando
          div.navbar-brand-icon
            i.icon.icon-food-1

      //- Collect the nav links, forms, and other content for toggling
      div.collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") Login
          li
            a(href="#") Cadastrar
   

  div.row
    div.container
      div.col-md-4
        //-- Main menu
        nav.main-menu(role="navigation")
          ul.nav.nav-pills.nav-stacked
            li
              a(href="index.html")
                |Home
                div.link-icon
                  i.icon.icon-shop

            li
              a(href="receitas.html")
                |Receitas
                div.link-icon
                  i.icon.icon-food-1

            li.active
              a(href="nova-receita.html")
                |Nova Receita
                div.link-icon
                  i.icon.icon-doc-1


      div.col-md-8
        div.ingredients-block(ng-controller="IngredientsCtrl as Ingredients")
          div(ng-repeat="ingredient in Ingredients.ingredientsList")
            span.ingredient-number 
              |{{ $index + 1 }}
            div.ingredient-item(
              ng-if="!ingredient.editing"
              ng-click="Ingredients.editIngredient($index)"
            ) 
              |{{ ingredient.name }}

            input.ingredient-item.editing(
              type="text",
              ng-if="ingredient.editing"
              ng-value="ingredient.name"
              ng-model="Ingredients.ingredientsList[$index].name"
              ng-keydown="Ingredients.saveIngredient($event, $index, true)"
              ng-blur="Ingredients.saveIngredient($event, $index)"
              focus="ingredient.editing"
            )  

          input.ingredient-item(
            type="text", 
            placeholder="Digite o ingrediente e tecle enter",
            ng-model="Ingredients.newIngredient.name", 
            ng-keydown="Ingredients.addIngredient($event)"
          )



  //- jQuery (necessary for Bootstrap"s JavaScript plugins)
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
  //- Include all compiled plugins (below), or include individual files as needed
  script(src="assets/javascripts/bootstrap.min.js")
  //- Angular framework
  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js")
  //- Angular components
  script(src="app/app.js")
  script(src="app/controllers.js")
  script(src="app/directives.js")
