div.page-receita
  nav.navbar.navbar-default(role="navigation")
    div.container
      //- Brand and toggle get grouped for better mobile display
      div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
          span.sr-only Alternar menu
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href="#") 
          |Panelando
          div.navbar-brand-icon
            i.icon.icon-food-1

      //- Collect the nav links, forms, and other content for toggling
      div.collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") Login
          li
            a(href="#") Cadastrar
   

  div.row
    div.container
      div.col-md-4
        //-- Main menu
        nav.main-menu(role="navigation")
          ul.nav.nav-pills.nav-stacked
            li
              a(href="#/")
                |Home
                div.link-icon
                  i.icon.icon-shop

            li
              a(href="#/receitas/2")
                |Receitas
                div.link-icon
                  i.icon.icon-food-1

            li.active
              a(href="#/nova")
                |Nova Receita
                div.link-icon
                  i.icon.icon-doc-1


      div.col-md-8

        article.l-receita-content

          h2.l-receita-section-title New Ingredientes

          div.notepad-block
            div.notepad-block-heading
          
            div
              span.notepad-number 
                
              div.notepad-item() 
                |{{newIngredient.name}}

            input.notepad-item(
              data-ng-model="newIngredient.name"
            )

          h2.l-receita-section-title Ingredientes

          div.notepad-block(ng-controller="IngredientsCtrl as Ingredients")
            div.notepad-block-heading
          
            div(ng-repeat="ingredient in Ingredients.ingredientsList")
              span.notepad-number 
                |{{ $index + 1 }}
              div.notepad-item(
                ng-if="!ingredient.editing"
                ng-click="Ingredients.editIngredient($index)"
              ) 
                |{{ ingredient.name }}

              input.notepad-item.editing(
                type="text",
                ng-if="ingredient.editing"
                ng-value="ingredient.name"
                ng-model="Ingredients.ingredientsList[$index].name"
                ng-keydown="Ingredients.saveIngredient($event, $index, true)"
                ng-blur="Ingredients.saveIngredient($event, $index)"
                focus="ingredient.editing"
              )  

            input.notepad-item(
              type="text", 
              placeholder="Digite o ingrediente e tecle enter",
              ng-model="Ingredients.newIngredient.name", 
              ng-keydown="Ingredients.addIngredient($event)"
            )

          h2.l-receita-section-title Modo de Preparo

          div.notepad-block(ng-controller="IngredientsCtrl as Ingredients")
            div.notepad-block-heading
          
            div(ng-repeat="ingredient in Ingredients.ingredientsList")
              span.notepad-number 
                |{{ $index + 1 }}
              div.notepad-item(
                ng-if="!ingredient.editing"
                ng-click="Ingredients.editIngredient($index)"
              ) 
                |{{ ingredient.name }}

              input.notepad-item.editing(
                type="text",
                ng-if="ingredient.editing"
                ng-value="ingredient.name"
                ng-model="Ingredients.ingredientsList[$index].name"
                ng-keydown="Ingredients.saveIngredient($event, $index, true)"
                ng-blur="Ingredients.saveIngredient($event, $index)"
                focus="ingredient.editing"
              )  

              div.notepad-item
                |&nbsp;

            input.notepad-item(
              type="text", 
              placeholder="Digite o ingrediente e tecle enter",
              ng-model="Ingredients.newIngredient.name", 
              ng-keydown="Ingredients.addIngredient($event)"
            )

