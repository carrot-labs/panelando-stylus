div.page-nova-receita
  nav.navbar.navbar-default(role="navigation")
    div.container
      //- Brand and toggle get grouped for better mobile display
      div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
          span.sr-only Alternar menu
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href="#") 
          |Panelando
          div.navbar-brand-icon
            i.icon.icon-food-1

      //- Collect the nav links, forms, and other content for toggling
      div.collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") Login
          li
            a(href="#") Cadastrar
   

  div.row
    div.container
      div.col-md-4
        //-- Main menu
        nav.main-menu(role="navigation")
          ul.nav.nav-pills.nav-stacked
            li
              a(href="#/")
                |Home
                div.link-icon
                  i.icon.icon-shop

            li.active
              a(href="#/receitas/2")
                |Receitas
                div.link-icon
                  i.icon.icon-food-1

            li
              a(href="#/nova")
                |Nova Receita
                div.link-icon
                  i.icon.icon-doc-1


      div.col-md-8(ng-if="Receita")

        article.primary-content

          h1.recipe-title {{Receita.nome}}

          div.recipe-image
            img.img-responsive(src="assets/images/static/steak-with-potatoes.jpg")

          div.recipe-info.row
            ul
              li.col-md-4
                h5
                  i.icon.icon-clock-1 
                  div.recipe-info-caption 15 min
              li.col-md-4
                h5
                  i.icon.icon-user-1 
                  div.recipe-info-caption Para três
              li.col-md-4
                h5
                  i.icon.icon-beaker-1 
                  div.recipe-info-caption Fácil

          h3 Ingredientes

          div.ingredients-block
            div.ingredient-item(ng-repeat="item in Receita.ingredientes")
              |{{item}}
            

        //- h1 {{Receita.nome}} - 
        //-   span.text-info Dificuldade: {{Receita.dificuldade}}

        //- h3 Porções: {{Receita.num_porcoes}}

