div.page-receita
  nav.navbar.navbar-default(role="navigation")
    div.container
      //- Brand and toggle get grouped for better mobile display
      div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
          span.sr-only Alternar menu
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href="#") 
          |Panelando
          div.navbar-brand-icon
            i.icon.icon-food-1

      //- Collect the nav links, forms, and other content for toggling
      div.collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") Login
          li
            a(href="#") Cadastrar
   

  div.container
    div.row
      div.col-md-4
        //-- Main menu
        nav.main-menu(role="navigation")
          ul.nav.nav-pills.nav-stacked
            li
              a(href="#/")
                |Home
                div.link-icon
                  i.icon.icon-shop

            li.active
              a(href="#/receitas/2")
                |Receitas
                div.link-icon
                  i.icon.icon-food-1

            li
              a(href="#/nova")
                |Nova Receita
                div.link-icon
                  i.icon.icon-doc-1


      div.col-md-8(ng-if="recipe")

        article.l-receita-content

          h1.l-receita-title {{ recipe.name }}

          div.l-receita-image
            img.img-responsive(ng-src="assets/images/super-static/{{recipe.image}}")

          div.l-receita-info.row
            ul
              li.col-md-4
                h5
                  i.icon.icon-clock-1 
                  div.l-receita-info-caption 
                    |{{ recipe.preparationTime }} min
              li.col-md-4
                h5
                  i.icon.icon-user-1 
                  div.l-receita-info-caption
                    |{{ recipe.numberOfPortions }} porções
              li.col-md-4
                h5
                  i.icon.icon-beaker-1 
                  div.l-receita-info-caption {{ recipe.difficulty }}

          h3.l-receita-label Ingredientes

          div.notepad-block
            div.notepad-block-heading

            div.notepad-item-holder(ng-repeat="ingredient in recipe.ingredients")
              span.notepad-number
                |{{ $index + 1 }}
              div.notepad-item
                |{{ ingredient }}

          h3.l-receita-label Modo de Preparo

          div.notepad-block
            div.notepad-block-heading

            div(ng-repeat="step in recipe.steps")
              span.notepad-number
                |{{$index+1}}
              div.notepad-item
                |{{ step }}
              div.notepad-item
                &nbsp;
            
